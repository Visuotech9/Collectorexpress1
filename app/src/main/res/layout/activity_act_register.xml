<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/lighttextColor"
    tools:context=".Activities.Act_register">


    <TextView
        android:layout_marginLeft="20dp"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="Register"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/background_border_cornor"
        android:orientation="horizontal"
        android:weightSum="1">


        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".85"
            android:background="@null"
            android:hint="Name"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingTop="8dp"
            android:paddingRight="@dimen/dimen_10"
            android:paddingBottom="8dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text=""
            android:textSize="15dp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".15"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_email_black_24dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_border_cornor"
        android:orientation="horizontal"
        android:weightSum="1">


        <EditText
            android:id="@+id/et_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".85"
            android:background="@null"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingTop="8dp"
            android:paddingRight="@dimen/dimen_10"
            android:paddingBottom="8dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text=""
            android:textSize="15dp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".15"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_email_black_24dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_border_cornor"
        android:orientation="horizontal"
        android:weightSum="1">


        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".85"
            android:background="@null"
            android:hint="Password"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingTop="8dp"
            android:paddingRight="@dimen/dimen_10"
            android:paddingBottom="8dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text=""
            android:textSize="15dp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".15"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_email_black_24dp" />


    </LinearLayout>


    <Button
        android:id="@+id/btn_register"
        android:textColor="@color/White"
        android:text="REGISTER"
        android:background="@drawable/background_border_button"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="@dimen/dimen_20"
        android:textSize="15dp"
        android:textColor="@color/White"
        android:gravity="center"
        android:text="Already registred! Login Me"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>